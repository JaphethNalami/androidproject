<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg7"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_learning"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="40sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="@string/portable_academic_office">

    </TextView>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#37876969"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="238dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/account"
            tools:ignore="ContentDescription"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="214dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="87dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mail"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="341dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:ems="10"
            android:textStyle="italic"
            android:hint="@string/email"
            android:textAlignment="center"
            android:inputType="textEmailSubject"
            android:background="@drawable/button"
             />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="87dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/password"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="341dp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/button"
            android:textStyle="italic"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="362dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox_s"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:text="@string/remember_me"
            tools:layout_editor_absoluteX="267dp"
            tools:layout_editor_absoluteY="453dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button"
            android:text="@string/login"
            android:backgroundTint="@color/blue"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="541dp" />

        <Button
            android:id="@+id/regnew"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/material_on_surface_stroke"
            android:text="@string/dont_have_an_account_register_here"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="682dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connecting_teacher_and_student"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

    </TextView>

</LinearLayout>


