<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDetails"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Details"
                android:textAlignment="center"
                android:textStyle="bold"
                android:ems="10"
                android:layout_marginBottom="40dp"
                android:textColor="@color/grey"
                android:textSize="40sp"></TextView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/teacher"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your details for "
                android:textColor="@color/grey"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" account processing "
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Full Name"
                android:background="@drawable/box"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/reg_no"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Registration Number"
                android:background="@drawable/box"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:layout_marginEnd="20dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/nid"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="National ID"
                android:background="@drawable/box"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="number"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/box"
                android:id="@+id/course_spinner" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Date of birth"
                android:background="@drawable/box"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:layout_marginEnd="20dp"
                android:inputType="date"/>

            <EditText
                android:id="@+id/phone_no"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:hint="Phone Number"
                android:background="@drawable/box"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="number"/>

            <Button
                android:id="@+id/btn_datareg"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Submit"
                android:textSize="20sp">

            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>