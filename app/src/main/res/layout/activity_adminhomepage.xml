<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminhomepage"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:text="Admin Dashboard"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lecturer registration"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:id="@+id/lecturer_register"
                android:textSize="15sp">
            </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students administartion"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box"
            android:textColor="@color/grey"
            android:textSize="15sp">
        </Button>

            <Button
                android:id="@+id/btn_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fail List"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:textSize="15sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missing Marks"
                android:id="@+id/btn_stuaca"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:textSize="15sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit student marks"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:id="@+id/mark_update"
                android:textSize="15sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Passlist"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/passlist"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:textSize="15sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Print student results summary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:textSize="15sp">
            </Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students administartion"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/box"
                android:textColor="@color/grey"
                android:textSize="15sp">
            </Button>
</LinearLayout>