<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    tools:context=".leclogin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="49sp"
        android:text="@string/myteaching">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/portable_working_desk"
        android:textSize="20sp"
        android:gravity="center"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:padding="1dp"
            android:src="@drawable/account">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="49dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:src="@drawable/mail">
            </ImageView>
            <EditText
                android:id="@+id/lec_username"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:hint="@string/user_name"
                android:textAlignment="center"
                android:inputType="text"
                android:layout_weight="1"
                android:background="@drawable/button">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="49dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/password">
            </ImageView>
            <EditText
                android:id="@+id/lec_pass"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="0dp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:inputType="textPassword"
                android:hint="@string/password"
                android:textAlignment="center"
                android:background="@drawable/button">
            </EditText>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginEnd="41dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/material_on_surface_stroke"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:text="@string/forgot_password"
        android:textSize="15sp">

    </Button>

    <Button
        android:id="@+id/leclogin"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:text="@string/login"
        android:textSize="20sp">

    </Button>

    <Button
        android:id="@+id/btnlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/material_on_surface_stroke"
        android:text="@string/don_t_have_an_account_contact_admin"
        android:textStyle="italic"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/an_office_away_from_the_office"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="50dp"
        android:textColor="@color/red">

    </TextView>

    </LinearLayout>


</LinearLayout>