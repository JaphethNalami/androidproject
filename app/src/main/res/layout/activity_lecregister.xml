<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecregister"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Lecture Registration Request Form"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="342dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:src="@drawable/teacher"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="Please enter your details for "
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=" processing your request"
                android:textColor="@color/grey"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_lec_name"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/box"
                android:hint="Enter Lecture Name"
                android:textAlignment="center"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_lec_email"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/box"
                android:layout_marginTop="20dp"
                android:hint="Enter Lecture Email"
                android:textAlignment="center"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edt_lec_password"
                android:layout_width="match_parent"
                android:background="@drawable/box"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:hint="Enter Lecture Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edt_lec_phone"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/box"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:hint="Enter Lecture Phone"
                android:inputType="phone" />

    <Button
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="submit"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>
</LinearLayout>
